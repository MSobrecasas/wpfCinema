<UserControl x:Class="Vistas.Control_de_Usuario.UCDatos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vistas.Control_de_Usuario"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="225"/>
            <ColumnDefinition Width="225"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock  HorizontalAlignment="Left" Style="{StaticResource txtabm}" Name="texto"
                Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"  Text="{Binding TextC}"></TextBlock>
        <TextBox  Name="txt" VerticalAlignment="Center"  Style="{StaticResource ResourceKey=style_texbox}"
                  Grid.Row="0" Grid.Column="1" x:FieldModifier="public" >
        </TextBox>
            
    </Grid>
</UserControl>
